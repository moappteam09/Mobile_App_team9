<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/choice_membership_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적립을 하시나요?"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/choice_membership_yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp" />

    <android.widget.Button
        android:id="@+id/choice_membership_yes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="네"
        android:textSize="20dp"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_membership_text"
        app:layout_constraintBottom_toTopOf="@+id/choice_membership_no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <android.widget.Button
        android:id="@+id/choice_membership_no"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="아니요"
        android:textSize="20dp"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_membership_yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>