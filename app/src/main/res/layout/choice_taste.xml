<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/choice_taste_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 맛으로 할까요?"
        android:textSize="35dp"
        android:fontFamily="@font/bm_jua"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/choice_taste_sweet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        />

    <android.widget.Button
        android:id="@+id/choice_taste_sweet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="달콤한 맛"
        android:textSize="25dp"
        android:fontFamily="@font/bm_jua"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_taste_text"
        app:layout_constraintBottom_toTopOf="@+id/choice_taste_spicy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <android.widget.Button
        android:id="@+id/choice_taste_spicy"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="매콤한 맛"
        android:textSize="25dp"
        android:fontFamily="@font/bm_jua"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_taste_sweet"
        app:layout_constraintBottom_toTopOf="@id/choice_taste_plain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <android.widget.Button
        android:id="@+id/choice_taste_plain"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="담백한 맛"
        android:textSize="25dp"
        android:fontFamily="@font/bm_jua"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_taste_spicy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>