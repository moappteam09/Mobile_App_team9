<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.widget.Button
        android:id="@+id/choice_menu_personal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="나만의 메뉴 보기"
        android:textSize="30dp"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/choice_menu_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        />

    <android.widget.Button
        android:id="@+id/choice_menu_new"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="새로운 메뉴 선택"
        android:textSize="30dp"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toBottomOf="@+id/choice_menu_personal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>