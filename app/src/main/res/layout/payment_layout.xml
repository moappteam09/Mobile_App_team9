<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 주문금액"
        android:fontFamily="@font/bm_jua"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"/>
    
    <TextView
        android:id="@+id/totalOrder"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:scrollbars="vertical"
        android:background="@drawable/layout_border">

    <!--리사이클러뷰로 선택한 메뉴 보여주기-->
    </TextView>
    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="합계 : "
        android:textColor="@color/black"
        android:fontFamily="@font/bm_jua"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적립"
        android:fontFamily="@font/bm_jua"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">
        <TextView
            android:text="010"
            android:textSize="20dp"
            android:fontFamily="@font/bm_jua"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/border_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/pay_phone_numbers1"
            android:text=""
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/bm_jua"
            android:background="@drawable/border_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/pay_phone_numbers2"
            android:text=""
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/bm_jua"
            android:background="@drawable/border_round"/>
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/putPhoneNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="전화번호 입력"
        android:fontFamily="@font/bm_jua"
        android:textColor="@drawable/text_effect_rev"
        android:textSize="24dp"
        android:padding="10dp"
        android:background="@drawable/button_effect_rev"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제 방법"
        android:fontFamily="@font/bm_jua"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center">
        <android.widget.Button
            android:id="@+id/cardPay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="신용/체크카드"
            android:textSize="20dp"
            android:fontFamily="@font/bm_jua"
            android:textColor="@drawable/text_effect"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_effect"/>
        <android.widget.Button
            android:id="@+id/giftPay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="상품권"
            android:textSize="20dp"
            android:fontFamily="@font/bm_jua"
            android:textColor="@drawable/text_effect"
            android:background="@drawable/button_effect"/>
    </LinearLayout>

    <Button
        android:id="@+id/pay_gohome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="처음으로"
        android:textSize="15dp"
        android:layout_marginLeft="170dp"
        android:backgroundTint="#FF9900"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/bm_jua"/>

</LinearLayout>