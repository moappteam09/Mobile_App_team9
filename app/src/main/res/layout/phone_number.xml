<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호를 입력해주세요"
        android:textSize="30dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/phone_number_numbers_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phone_number_numbers_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/phone_number_btns_group"
        >

        <TextView
            android:id="@+id/phone_number_numbers1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="010"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/border_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_numbers2"
            />
        <EditText
            android:id="@+id/phone_number_numbers2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/border_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/phone_number_numbers1"
            app:layout_constraintEnd_toStartOf="@id/phone_number_numbers3"
            />
        <EditText
            android:id="@+id/phone_number_numbers3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/border_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/phone_number_numbers2"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phone_number_btns_group"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_numbers_group"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        >

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btn8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btn4"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn7"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btn9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btn5"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btn6"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_btns_btn7"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btn5"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btn1"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn4"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btn6"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_btns_btn8"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btn2"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_number_btns_btn9"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btn3"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_btns_btn4"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btn2"
            app:layout_constraintBottom_toTopOf="@+id/phone_number_btns_btnnull"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn1"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btn3"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_btns_btn5"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btn0"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_number_btns_btn6"
            app:layout_constraintBottom_toTopOf="@id/phone_number_btns_btnmin"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btnnull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btn0"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_btns_btn1"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn1"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_btns_btnmin"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_btns_btn2"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <android.widget.Button
            android:id="@+id/phone_number_btns_btnmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/border_round_black"
            app:layout_constraintStart_toEndOf="@+id/phone_number_btns_btn0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_number_btns_btn3"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>