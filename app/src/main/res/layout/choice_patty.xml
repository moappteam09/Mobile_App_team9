<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/choice_patty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 패티를 사용할까요?"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/choice_patty_cow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        />

    <android.widget.Button
        android:id="@+id/choice_patty_cow"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="소"
        android:textSize="20dp"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_patty_text"
        app:layout_constraintBottom_toTopOf="@+id/choice_patty_pig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <android.widget.Button
        android:id="@+id/choice_patty_pig"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="돼지"
        android:textSize="20dp"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_patty_cow"
        app:layout_constraintBottom_toTopOf="@id/choice_patty_chicken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <android.widget.Button
        android:id="@+id/choice_patty_chicken"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="닭"
        android:textSize="20dp"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_patty_pig"
        app:layout_constraintBottom_toTopOf="@+id/choice_patty_substitute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.widget.Button
        android:id="@+id/choice_patty_substitute"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="대체육"
        android:textSize="20dp"
        android:textColor="@drawable/text_effect"
        android:background="@drawable/button_effect"
        app:layout_constraintTop_toBottomOf="@+id/choice_patty_chicken"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>